---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="cta">
    <div class="line"></div>
    <h1>{title}</h1>
    <p>
        <slot />
    </p>
    <a class="anchor-dark" href="/contact/">Contacteer ons</a>
</div>

<style>
    .line {
        height: calc(2 * var(--gap));
        border-left: 2px solid var(--black);
        width: 0;
        margin: 0 auto;
    }

    .cta {
        text-align: center;
        margin: 0 auto;
    }
</style>
