---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
    event: CollectionEntry<"event">;
}

const { event } = Astro.props;
---

<div>
    <Image src={event.data.cover} alt='' />
    <h3>{event.data.name}</h3>
    <p>{event.data.date.toLocaleDateString("fr")} {event.data.dateEnd && `t.e.m. ${event.data.dateEnd.toLocaleDateString("fr")}`}</p>
    <a class="anchor-dark" href={`/exposities/${event.slug}/`}>
        Meer informatie
    </a>
</div>

<style>
    p {
        font-style: italic;
        color: var(--accent-2);
    }
</style>