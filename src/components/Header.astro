---
import { Image } from "astro:assets";

import Menu from "../components/Menu.astro";
import Icon from "../components/Icon.astro";

import logo from "../assets/logo.png";
---

<div class="event">
    <p>Geplande expositie: Luc Martinsen (2 februari 2024) &nbsp; <a class="anchor-light" href="/exposities/luc-martinsen">Meer informatie</a></p>
</div>
<header>
    <div class="logo">
        <a href="/"><Image src={logo} alt="" /></a>
    </div>
    <div class="menu" id="menuOpen">
        <a>MENU</a>&nbsp;<Icon icon="list" />
    </div>
</header>

<Menu />

<style>
    .event {
        background-color: var(--accent-3);
        color: var(--white);
        padding: 0 calc(var(--gap) * 2);
        position: fixed;
        width: 100%;
        height: 4em;
        z-index: 1;
    }

    .event p {
        display: block;
        line-height: 4em;
        margin: 0;
    }

    header {
        padding: calc(var(--gap) / 2) calc(var(--gap) * 2);
        padding-top: 5em;
        display: flex;
        align-items: center;
    }

    .menu {
        margin-left: auto;
        display: flex;
        align-items: center;
    }

    .logo {
        width: 10em;
    }

    img {
        width: 100%;
        height: auto;
    }

    .menu a:hover {
        font-weight: 700;
    }
</style>
