---
import { Image } from "astro:assets";

import Icon from "../components/Icon.astro";

import logo from "../assets/logo.png";
---

<header>
    <div class="logo">
        <a href="/"><Image src={logo} alt="" /></a>
    </div>
    <div class="menu">
        <a>MENU</a>&nbsp;<Icon icon="list" />
    </div>
</header>

<style>
    header {
        padding: calc(var(--gap) / 2) calc(var(--gap) * 2);
        display: flex;
        align-items: center;
    }

    .menu {
        margin-left: auto;
        display: flex;
        align-items: center;
    }

    .logo {
        width: 10em;
    }

    img {
        width: 100%;
        height: auto;
    }
</style>
