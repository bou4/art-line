        </div>
        <div class="menu-footer">
            <div>
                <p>vragen?</p>
                <a>info@art-line.be</a>
            </div>
            <div>
                <p>volg ons</p>
                <Icon icon="facebook-logo" />
                <Icon icon="instagram-logo" />
            </div>
        </div>
    </div>
</div>

<style lang="scss">
    .menu {
        position: fixed;

        top: 0;
        left: 0;

        width: 100%;
        height: 100%;

        display: flex;

        z-index: 1;

        visibility: hidden;
        
        &.menu-open {
            visibility: visible;

            > :nth-child(1) {
                min-width: 50%;

                backdrop-filter: blur(10px) opacity(1);

                @media (max-width: 1200px) {
                    min-width: 0%;
                }
            }
        }

        > :nth-child(1) {
            min-width: 100%;

            transition: min-width 0.5s, backdrop-filter 0.5s;

            backdrop-filter: blur(10px) opacity(0);
        }

        > :nth-child(2) {
            width: 50%;

            display: flex;

            flex-direction: column;
            color: var(--white);
            background-color: var(--accent-3);
            padding: calc(2 * var(--gap));

            @media (max-width: 1200px) {
                width: 100%;
            }
        }
    }

    .menu-items {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
        max-height: 25em;

        a {
            font-size: 2em;

            transition: color 0.5s;

            &:hover {
                color: var(--accent-1);
            }
        }
    }

    .menu-close {
        text-align: right;

        a:hover {
            font-weight: 700;
        }
    }

    .menu-footer {
        display: flex;
        border-top: 2px solid var(--white);
        margin-top: var(--gap);

        > :nth-child(2) {
            margin-left: auto;
        }
    }
</style>

<script>
    const menu = document.querySelector("#menu");
    const menuOpen = document.querySelector("#menuOpen");
    const menuClose = document.querySelector("#menuClose");

    function toggleMenu(e : Event) {
        menu?.classList.toggle("menu-open");

        e.preventDefault();
    }

    menuOpen?.addEventListener("click", toggleMenu, false);
    menuClose?.addEventListener("click", toggleMenu, false);
</script>
