---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

import Layout from "../layouts/Layout.astro";
import Artist from '../components/Artist.astro';

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/index/*.{jpg,png}');

const artists = await getCollection("artist", ({ data }) => {
    return data.highlight;
});
---

<Layout title="Welkom">
    <div class="section-1">
        <div>
            <Image src={images['/src/assets/index/1-1x1.png']()} alt="" />
        </div>
        <div>
            <p>Welkom</p>
            <h1>Art-line is een kunstgallerij in hartje Dilbeek.</h1>
            <a class="anchor-dark">Over ons</a>
        </div>
        <div>
            <Image src={images['/src/assets/index/2-5x6.png']()} alt="" />
        </div>
        <div>
            <Image src={images['/src/assets/index/3-2x3.jpg']()} alt="" />
        </div>
        <div>
            <h1>Art-line is een kunstgallerij in hartje Dilbeek.</h1>
            <a class="anchor-dark">Kunst</a>
        </div>
    </div>
    <div class="section-2">
        <div>
            <img src="/assets/kunstenaars/luc-martinsen/1.png" />
        </div>
        <div>
            <p>Evenement</p>
            <div class="aside">
                <h1>Tentoonstelling Luc Martinsen</h1>
                <p>2 februari 2024</p>
                <p>We nodigen jullie van harte uit op de tentoonstelling van het werk van Luc Martinsen.</p>
            </div>
            <a class="anchor-light">Meer informatie</a>
        </div>
    </div>
    <div>
        <h1>Kunstenaars</h1>
        <p>Ontmoet de talentvolle kunstenaars die onze galerie tot leven brengen.</p>
        <a class="anchor-dark" href="/kunstenaars/">Bekijk alle kunstenaars</a>
        <div class="grid-staggered-3">
            {artists.map((artist) => <Artist artist={artist} />)}
        </div>
    </div>
    <div class="section-4">
        <div>
            <p>Contact</p>
            <h1>Vragen over onze diensten? Interesse in een kunstwerk?</h1>
            <a class="anchor-dark">Contacteer ons</a>
        </div>
        <div>
            <img src="/assets/index-4.png" />
        </div>
        <div>
            <img src="/assets/index-5.png" />
        </div>
        <div>
            <h1>Art-line is een kunstgallerij in hartje Dilbeek.</h1>
        </div>
    </div>
</Layout>

<style>
    .section-1 {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        grid-template-rows: repeat(12, 1fr);
    }

    .section-1 > :nth-child(1) {
        grid-column-start: 2;
        grid-column-end: 7;
        grid-row-start: 1;
        grid-row-end: 6;
    }

    .section-1 > :nth-child(2) {
        grid-column-start: 8;
        grid-column-end: 13;
        grid-row-start: 2;
        grid-row-end: 4;
    }

    .section-1 > :nth-child(3) {
        grid-column-start: 8;
        grid-column-end: 13;
        grid-row-start: 5;
        grid-row-end: 11;
    }

    .section-1 > :nth-child(4) {
        grid-column-start: 1;
        grid-column-end: 5;
        grid-row-start: 7;
        grid-row-end: 13;
    }

    .section-1 > :nth-child(5) {
        margin-top: auto;
        grid-column-start: 6;
        grid-column-end: 13;
        grid-row-start: 11;
        grid-row-end: 13;
    }

    .aside {
        padding-left: 2.5em;
        margin: 2.5em 0;
        border-left: 2px solid var(--white);
        line-height: 1;
    }
    .section-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 5em;
        padding: 5em;
        background-color: var(--accent-3);
        color: var(--white);
    }

    .section-2 > :nth-child(2) {
        margin: auto 0;
    }

    .section-3 {
        display: flex;
        flex-direction: column;
        gap: 2.5em;
        align-items: center;
    }

    .section-3 > :nth-child(1) {
        text-align: center;
        width: 25em;
    }

    .section-4 {
        display: grid;
        grid-template-columns: 6fr 1fr 5fr;
        grid-template-rows: 1fr 1fr 1fr;
    }

    .section-4 > :nth-child(1) {
        text-align: right;
    }

    .section-4 > :nth-child(2) {
        grid-column-start: 3;
        grid-column-end: 4;
        grid-row-start: 1;
        grid-row-end: 3;
    }

    .section-4 > :nth-child(3) {
        grid-column-start: 1;
        grid-column-end: 2;
        grid-row-start: 2;
        grid-row-end: 4;
    }
    
    .section-4 > :nth-child(4) {
        margin-top: auto;
        
        grid-column-start: 3;
        grid-column-end: 4;
        grid-row-start: 3;
        grid-row-end: 4;
    }
</style>
