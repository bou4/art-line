---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
    <div class="section-1">
        <div>
            <img src="/assets/index-1.png" />
        </div>
        <div>
            <p>Welkom</p>
            <h1>Art-line is een kunstgallerij in hartje Dilbeek.</h1>
            <a class="anchor-dark">Over ons</a>
        </div>
        <div>
            <img src="/assets/index-2.png" />
        </div>
        <div>
            <img src="/assets/index-3.png" />
        </div>
        <div>
            <h1>Art-line is een kunstgallerij in hartje Dilbeek.</h1>
            <a class="anchor-dark">Kunst</a>
        </div>
    </div>
    <div class="section-2">
        <div>
            <img src="/assets/kunstenaars/luc-martinsen/1.png" />
        </div>
        <div>
            <p>Evenement</p>
            <div class="aside">
                <h1>Tentoonstelling Luc Martinsen</h1>
